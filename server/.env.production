# Production Environment Variables Template
# Copy this file to .env and fill in your production values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# Get this from your database provider (Render, Neon, Supabase, etc.)
DATABASE_URL=postgres://username:password@host:5432/database_name

# Security
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Data Source
# Options: 'mock' or 'civitbuild'
DATA_SOURCE=mock

# CivitBuild API (if using real API)
CIVIT_API_URL=https://api.civitbuild.com/v1

# Frontend URL (Your Vercel deployment URL)
# Example: https://civitbuild-erp.vercel.app
FRONTEND_URL=https://your-app.vercel.app
